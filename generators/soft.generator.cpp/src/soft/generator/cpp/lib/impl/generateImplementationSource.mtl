    #ifdef SHOW_DELETION
        std::string name;
        if ( auto named = dynamic_cast<ENamedElement*>( this ) )
            name = named->getName();
        std::cout << "delete [classBaseName/] ['['/]"<< this << "[']'/] " << name << std::endl;
    #endif
    [/if]
    //[protected (classBaseName+ '::~' + classBaseName)]
